<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.account.Function" table="functions">
        <meta attribute="class-description">
            This class contains the function detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>

        <property name="startDate" column="start_date" type="java.time.LocalDateTime"/>
        <property name="endDate" column="end_date" type="java.time.LocalDateTime"/>
        <many-to-one name="user" column="user_id"  class="model.account.User" lazy="no-proxy" />
        <many-to-one name="role" column="role_id"  class="model.account.Role" lazy="no-proxy"/>
        <many-to-one name="company" column="company_id"  class="model.identity.Company" lazy="no-proxy" />

    </class>
</hibernate-mapping>