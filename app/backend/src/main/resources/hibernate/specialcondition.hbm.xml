<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.insurance.SpecialCondition" table="specialconditions">
        <meta attribute="class-description">
            This class contains the SpecialCondition detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>
        <property name="title" column="title" type="string"/>
        <property name="referenceCode" column="reference_code" type="string"/>
        <property name="text" column="text" type="string" length="999999"/>

    </class>

</hibernate-mapping>