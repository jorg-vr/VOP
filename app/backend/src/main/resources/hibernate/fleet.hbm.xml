<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.fleet.Fleet" table="fleets">
        <meta attribute="class-description">
            This class contains the fleet detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>
        <property name="name" type="string" column="name"/>
        <many-to-one name="address" column="address_id" class="model.identity.Address" lazy="proxy" fetch="select"/>
        <many-to-one name="owner" column="owner_id"  class="model.identity.Customer" not-null="true" lazy="proxy" fetch="select" />
        <bag name="vehicles" access="field" table="vehicles" cascade="all"
             lazy="true" fetch="select">
            <key column="fleet_id" not-null="false"/>
            <one-to-many class="model.fleet.Vehicle" />
        </bag>

    </class>
</hibernate-mapping>