<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.fleet.Fleet" table="FLEET">
        <meta attribute="class-description">
            This class contains the fleet detail.
        </meta>
        <id name="uuid" type="binary" column="id">
            <generator class="uuid"/>
        </id>
        <bag name="vehicles" access="field" table="VEHICLE" cascade="all"
             lazy="true" fetch="select">
            <key column="fleet_id" not-null="true"/>
            <one-to-many class="model.fleet.Vehicle" />
        </bag>

    </class>
</hibernate-mapping>