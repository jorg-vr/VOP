<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.identity.Address" table="addresses">
        <meta attribute="class-description">
            This class contains the address detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>

        <property name="country" column="country" type="string"/>
        <property name="postalCode" column="postalCode" type="string"/>
        <property name="street" column="street" type="string"/>
        <property name="streetNumber" column="street_number" type="string"/>
        <property name="town" column="town" type="string"/>

    </class>
</hibernate-mapping>