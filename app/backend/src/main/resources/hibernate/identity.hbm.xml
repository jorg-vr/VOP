<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.identity.Identity" table="ACCOUNT">
        <meta attribute="class-description">
            This class contains the account detail.
        </meta>
        <id name="uuid" type="string" column="id">
            <generator class="uuid"/>
        </id>

        <many-to-one name="address" column="address_id" />
        <property name="email" column="email" type="string"/>
        <property name="phoneNumber" column="phonenumber" type="string"/>

    </class>
</hibernate-mapping>