<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.account.User" table="users">
        <meta attribute="class-description">
            This class contains the user detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>
        <property name="email" column="email" type="string"/>
        <property name="firstName" column="first_name" type="string"/>
        <property name="lastName" column="last_name" type="string"/>
        <property name="password" column="password" type="string"/>
        <bag name="functions" access="field" table="functions"
             lazy="true" fetch="select" inverse="true">
            <key column="user_id" not-null="true"/>
            <one-to-many class="model.account.Function" />
        </bag>
    </class>

</hibernate-mapping>