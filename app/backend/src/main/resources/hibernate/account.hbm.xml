<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.account.Account" table="ACCOUNT">
        <meta attribute="class-description">
            This class contains the account detail.
        </meta>
        <id name="uuid" type="binary" column="id">
            <generator class="uuid"/>
        </id>

        <property name="login" column="login" type="string"/>
        <property name="hashedPassword" column="hashed_password" type="string"/>
        <property name="identity" column="iden" type="string"/>
        <!--<property name="role" column="iden" type="string"/>-->
        <many-to-one name="identity" column="identity_id"/>

    </class>
</hibernate-mapping>