<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.fleet.Vehicle" table="vehicles">
        <meta attribute="class-description">
            This class contains the vehicle detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>
        <property name="year" column="production_date" type="java.time.LocalDate"/>
        <property name="brand" column="brand" type="string"/>
        <property name="model" column="model" type="string"/>
        <property name="vin" column="chassis_number" type="string"/>
        <property name="licensePlate" column="license_plate" type="string"/>
        <property name="value" column="value" type="int"/>
        <property name="mileage" column="mileage" type="int"/>
        <many-to-one name="fleet" column="fleet_id" class="model.fleet.Fleet" lazy="no-proxy" fetch="select"/>
        <many-to-one name="type" column="type" lazy="no-proxy" fetch="select" class="model.fleet.VehicleType"/>
        <map name="commissions"
             table="vehicle_commissions" cascade="all">
            <key column="vehicle_id"/>

            <map-key column="surety_type">
                <type name = "org.hibernate.type.EnumType" >
                    <param name="enumClass" >model.insurance.SuretyType</param>
                </type>
            </map-key>
            <element column="value" type="java.lang.Double"/>
        </map>
    </class>

</hibernate-mapping>