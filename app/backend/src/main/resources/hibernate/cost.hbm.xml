<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.billing.Cost" table="costs">
        <meta attribute="class-description">
            This class contains the cost detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>

        <property name="paidFor" column="paid" type="java.lang.Boolean" />
        <!--TODO-->
        <property name="contractID" column="insurance_id" type="java.lang.Integer" />
        <!--TODO-->
        <property name="amount" column="amount" type="double" />
        <property name="startDate" column="start_data" type="java.time.LocalDateTime"/>
        <property name="endDate" column="end_data" type="java.time.LocalDateTime"/>

    </class>
</hibernate-mapping>