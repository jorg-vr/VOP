<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.billing.Invoice" table="invoices">
        <meta attribute="class-description">
            This class contains the invoice detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>

        <property name="paid" column="paid" type="java.lang.Boolean"/>
        <many-to-one name="payer" column="payer_id" class="model.identity.Company" lazy="proxy" fetch="select"/>
        <many-to-one name="beneficiary" column="beneficiary_id" class="model.identity.Company" lazy="proxy"
                     fetch="select"/>
        <property name="startDate" column="start_data" type="java.time.LocalDateTime"/>
        <property name="endDate" column="end_data" type="java.time.LocalDateTime"/>
        <bag name="contracts" access="field" table="contract_invoice"
             lazy="true" fetch="select">
            <key column="invoice_id" not-null="false"/>
            <many-to-many column="contract_id" class="model.insurance.Contract"/>
        </bag>
        <property name="type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">model.billing.InvoiceType</param>
            </type>
        </property>

    </class>
</hibernate-mapping>