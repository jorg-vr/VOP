<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.billing.Invoice" table="invoices">
        <meta attribute="class-description">
            This class contains the invoice detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>

        <property name="paid" column="paid" type="java.lang.Boolean"/>
        <many-to-one name="payer" column="payer_id" class="model.identity.Company" lazy="proxy" fetch="select"/>
        <property name="startDate" column="start_data" type="java.time.LocalDateTime"/>
        <property name="endDate" column="end_data" type="java.time.LocalDateTime"/>
        <bag name="vehicleInvoices" access="field" table="vehicle_invoices" lazy="false"
             cascade="all">
            <key column="invoice_id" />
            <one-to-many class="model.billing.VehicleInvoice" />
        </bag>
        <property name="type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">model.billing.InvoiceType</param>
            </type>
        </property>

    </class>
    
    <class name="model.billing.VehicleInvoice" table="vehicle_invoices">
        <meta attribute="class-description">
            This class contains the VehicleInvoice detail.
        </meta>
        <id name="uuid" type="uuid-binary" column="id">
            <generator class="uuid2"/>
        </id>
        <many-to-one name="surety" column="surety_id" class="model.insurance.Surety" lazy="false" not-null="false" />
        <property name="vehicleInsuranceID" column="vehicle_insurance_id" type="uuid-binary"/>
        <property name="franchise" column="franchise" type="int"/>
        <property name="insuredValue" column="insured_value" type="int"/>
        <property name="totalCost" column="total_cost" type="int" />
        <property name="totalTax" column="total_tax" type="int" />
        <property name="vin" column="chassis_number" type="java.lang.String"/>
        <property name="licensePlate" column="license_plate" type="java.lang.String"/>
    </class>
</hibernate-mapping>
